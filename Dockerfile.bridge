FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements-bridge.txt .
RUN pip install --no-cache-dir -r requirements-bridge.txt

# Copy bridge server
COPY bridge_server.py .

# Expose port (Railway will set PORT env var)
EXPOSE 8000

# Run the bridge server with uvicorn
# Railway sets PORT env var, but CMD exec form doesn't expand variables
# So we use shell form to allow variable expansion
CMD uvicorn bridge_server:app --host 0.0.0.0 --port ${PORT:-8000}